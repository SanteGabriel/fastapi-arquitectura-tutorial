# =================================================
# GLOBAL PROJECT CONFIGURATION
# =================================================
# Copy this file to .env and fill in your actual values
# This file contains shared configuration across all services

# =================================================
# SHARED AUTHENTICATION
# =================================================
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_ALGORITHM=HS256

# =================================================
# DATABASE CONFIGURATION (MongoDB Atlas)
# =================================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_AUTH_DB=llm_wrapper_auth
MONGODB_CHAT_DB=llm_wrapper_chat
MONGODB_HISTORY_DB=llm_wrapper_history
MONGODB_PAYMENTS_DB=llm_wrapper_payments

# =================================================
# REDIS CLOUD CONFIGURATION
# =================================================
REDIS_URL=redis://default:your-redis-password@redis-cloud-url:port
REDIS_PASSWORD=your-redis-password

# =================================================
# LLM API KEYS (for Chat Service)
# =================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# =================================================
# PAYMENT PROVIDERS (Sandbox/Test Keys)
# =================================================
# Stripe Test Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# MercadoPago Test Keys
MERCADOPAGO_ACCESS_TOKEN=TEST-your-mp-access-token-here
MERCADOPAGO_PUBLIC_KEY=TEST-your-mp-public-key-here
MERCADOPAGO_WEBHOOK_SECRET=your-mp-webhook-secret-here

# =================================================
# ENVIRONMENT SETTINGS
# =================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR

# =================================================
# SERVICE PORTS (Development)
# =================================================
AUTH_SERVICE_PORT=8001
CHAT_SERVICE_PORT=8002
PAYMENT_SERVICE_PORT=8003
HISTORY_SERVICE_PORT=8004
CACHE_SERVICE_PORT=6379
FRONTEND_PORT=3000
GATEWAY_PORT=8000

# =================================================
# CORS CONFIGURATION
# =================================================
CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# =================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# =================================================
# ANALYTICS & MONITORING (Optional)
# =================================================
SENTRY_DSN=your_sentry_dsn_here
GA_TRACKING_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# =================================================
# QUICK SETUP INSTRUCTIONS
# =================================================
# 1. Copy this file to .env in the root directory
# 2. Fill in all the actual API keys and credentials
# 3. Run: ./setup_env_files.sh to distribute to all services
# 4. Each service will automatically use these shared values
