# Redis Configuration
REDIS_URL=redis://default:your-redis-password@redis-cloud-url:port
REDIS_HOST=redis-cloud-url
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_SSL=true

# Connection Pool
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5

# Cache TTL Configuration (in seconds)
DEFAULT_CACHE_TTL=3600          # 1 hour
SESSION_CACHE_TTL=86400         # 24 hours
USER_CACHE_TTL=1800            # 30 minutes
CHAT_RESPONSE_CACHE_TTL=7200   # 2 hours
LLM_MODEL_CACHE_TTL=3600       # 1 hour
RATE_LIMIT_CACHE_TTL=3600      # 1 hour

# Cache Keys Prefixes
USER_SESSION_PREFIX=session:user:
RATE_LIMIT_PREFIX=rate_limit:
CHAT_CACHE_PREFIX=chat:response:
USER_PROFILE_PREFIX=user:profile:
LLM_MODEL_PREFIX=llm:model:
SUBSCRIPTION_PREFIX=subscription:

# Cache Size Limits (in MB)
MAX_CACHE_SIZE_MB=500
MAX_SESSION_SIZE_KB=100
MAX_RESPONSE_SIZE_KB=50
ENABLE_CACHE_COMPRESSION=true

# Rate Limiting Configuration
ENABLE_DISTRIBUTED_RATE_LIMITING=true
SLIDING_WINDOW_SIZE=3600  # 1 hour in seconds
BUCKET_SIZE=100

# Monitoring and Metrics
ENABLE_CACHE_METRICS=true
METRICS_COLLECTION_INTERVAL=60  # seconds
CACHE_HIT_RATIO_THRESHOLD=0.8

# Backup and Persistence
ENABLE_REDIS_PERSISTENCE=true
BACKUP_FREQUENCY_HOURS=6
MAX_BACKUP_FILES=24

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Health Check
HEALTH_CHECK_INTERVAL_SECONDS=30
CACHE_HEALTH_THRESHOLD_MS=100

# Authentication (for service communication)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
