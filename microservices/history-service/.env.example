# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=llm_wrapper_history
CONVERSATIONS_COLLECTION=conversations
MESSAGES_COLLECTION=messages

# Authentication (shared with other services)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256

# Pagination and Limits
MAX_CONVERSATIONS_PER_USER=1000
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
MAX_MESSAGE_LENGTH=50000

# Search Configuration
ENABLE_FULL_TEXT_SEARCH=true
SEARCH_INDEX_NAME=conversation_search
MAX_SEARCH_RESULTS=50

# Retention Policy
CONVERSATION_RETENTION_DAYS=365
AUTO_DELETE_OLD_CONVERSATIONS=false
BACKUP_BEFORE_DELETE=true

# Rate Limiting
REQUESTS_PER_MINUTE=100
BURST_LIMIT=20

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# Export/Import
ENABLE_EXPORT=true
MAX_EXPORT_SIZE_MB=50
SUPPORTED_EXPORT_FORMATS=json,csv,txt
