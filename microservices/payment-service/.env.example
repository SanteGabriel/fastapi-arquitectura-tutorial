# Stripe Configuration (Sandbox/Test)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_API_VERSION=2023-10-16

# MercadoPago Configuration (Sandbox)
MERCADOPAGO_ACCESS_TOKEN=TEST-your-mp-access-token-here
MERCADOPAGO_PUBLIC_KEY=TEST-your-mp-public-key-here
MERCADOPAGO_WEBHOOK_SECRET=your-mp-webhook-secret-here
MERCADOPAGO_ENVIRONMENT=sandbox

# Subscription Plans Configuration
FREE_PLAN_FEATURES=["50_requests_hour", "basic_models", "7_day_history"]
PREMIUM_PLAN_FEATURES=["500_requests_hour", "premium_models", "30_day_history", "priority_support"]
ENTERPRISE_PLAN_FEATURES=["5000_requests_hour", "all_models", "unlimited_history", "dedicated_support", "custom_integrations"]

# Pricing (in cents for Stripe, in the smallest currency unit)
FREE_PLAN_PRICE=0
PREMIUM_PLAN_PRICE_MONTHLY=999  # $9.99
PREMIUM_PLAN_PRICE_YEARLY=9999  # $99.99
ENTERPRISE_PLAN_PRICE_MONTHLY=4999  # $49.99
ENTERPRISE_PLAN_PRICE_YEARLY=49999  # $499.99

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=llm_wrapper_payments
SUBSCRIPTIONS_COLLECTION=subscriptions
TRANSACTIONS_COLLECTION=transactions
INVOICES_COLLECTION=invoices

# Authentication (shared)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256

# Webhooks Configuration
WEBHOOK_TIMEOUT_SECONDS=30
MAX_WEBHOOK_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=5

# Security
PAYMENT_TOKEN_EXPIRE_MINUTES=30
REQUIRE_CVV_VERIFICATION=true
ENABLE_3D_SECURE=true

# Rate Limiting
PAYMENT_REQUESTS_PER_MINUTE=10
WEBHOOK_REQUESTS_PER_MINUTE=100

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://localhost:3000"]

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
PAYMENT_SUCCESS_TEMPLATE_ID=payment_success
PAYMENT_FAILED_TEMPLATE_ID=payment_failed
SUBSCRIPTION_RENEWAL_TEMPLATE_ID=subscription_renewal
