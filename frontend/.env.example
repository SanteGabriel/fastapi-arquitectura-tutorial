# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:8001
NEXT_PUBLIC_CHAT_SERVICE_URL=http://localhost:8002
NEXT_PUBLIC_HISTORY_SERVICE_URL=http://localhost:8004
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:8003

# App Configuration
NEXT_PUBLIC_APP_NAME="LLM Wrapper"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Multi-LLM Chat Platform with AI Integration"
NEXT_PUBLIC_COMPANY_NAME="YourCompany"

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=llm_wrapper_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=llm_wrapper_refresh
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=300  # 5 minutes before expiry
NEXT_PUBLIC_SESSION_TIMEOUT=3600000      # 1 hour in milliseconds

# Features Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT_EXPORT=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=false

# Chat Configuration
NEXT_PUBLIC_DEFAULT_LLM=openai
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=4000
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_TYPING_INDICATOR_DELAY=500
NEXT_PUBLIC_AUTO_SAVE_CONVERSATIONS=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=system  # light, dark, system
NEXT_PUBLIC_MESSAGES_PER_PAGE=50
NEXT_PUBLIC_CONVERSATIONS_PER_PAGE=20
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ANIMATION_DURATION=300

# Rate Limiting (UI feedback)
NEXT_PUBLIC_SHOW_RATE_LIMIT_WARNINGS=true
NEXT_PUBLIC_RATE_LIMIT_WARNING_THRESHOLD=10  # requests remaining

# Payment Integration (Client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=TEST-your-mp-public-key-here
NEXT_PUBLIC_ENABLE_STRIPE=true
NEXT_PUBLIC_ENABLE_MERCADOPAGO=true

# Analytics (if enabled)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_API_RESPONSES=false  # Only for development
NEXT_PUBLIC_MOCK_API_RESPONSES=false

# SEO and Social
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_TITLE="LLM Wrapper - Multi-AI Chat Platform"
NEXT_PUBLIC_SITE_DESCRIPTION="Access multiple AI models in one platform"
NEXT_PUBLIC_SOCIAL_IMAGE_URL=/images/social-preview.png

# PWA (Future)
NEXT_PUBLIC_ENABLE_PWA=false
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Websockets (Future for real-time features)
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=false
